<Window x:Class="L2Market.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:L2Market.UI"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="L2Market - DLL Injector" Height="650" Width="800"
        WindowStartupLocation="CenterScreen"
        MinHeight="500" MinWidth="600">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#E9ECEF" BorderThickness="0,0,0,1" Padding="0,0,0,15" Margin="0,0,0,20">
            <DockPanel>
                <TextBlock Text="L2Market DLL Injector" 
                           FontSize="28" FontWeight="Bold" 
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Foreground="#212529"/>
                <Button Content="Settings" 
                        Command="{Binding OpenSettingsCommand}"
                        HorizontalAlignment="Right" 
                        Padding="15,8" MinWidth="80"
                        Background="#6C757D" Foreground="White"
                        BorderThickness="0"/>
            </DockPanel>
        </Border>
        
        <!-- Configuration Section -->
        <GroupBox Grid.Row="1" Header="Configuration" Margin="0,0,0,15" Foreground="#212529">
            <Grid Margin="15">
                <TextBlock Text="DLL путь и другие настройки можно изменить в окне Settings" 
                           FontStyle="Italic" 
                           Foreground="#6C757D" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
            </Grid>
        </GroupBox>
        
        <!-- Process Configuration -->
        <GroupBox Grid.Row="2" Header="Process Configuration" Margin="0,0,0,15" Foreground="#212529">
            <Grid Margin="15">
                <Label Content="Process Name:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#212529"/>
                <TextBox Text="{Binding ProcessName, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,0,0,0" Height="30" FontSize="14" Foreground="#212529" Background="White"/>
            </Grid>
        </GroupBox>
        
        <!-- Action Buttons -->
        <Border Grid.Row="3" Background="#F8F9FA" BorderBrush="#E9ECEF" BorderThickness="0,0,0,1" Padding="0,15,0,15" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="🛑 Stop Search" 
                        Command="{Binding StopAutoSearchCommand}"
                        Padding="20,12" Margin="5" FontSize="14"
                        Background="#FF6B6B" Foreground="White"
                        MinWidth="150" Height="40"/>
                <Button Content="🔄 Restart Search" 
                        Command="{Binding RestartSearchCommand}"
                        Padding="20,12" Margin="5" FontSize="14"
                        Background="#17A2B8" Foreground="White"
                        MinWidth="150" Height="40"/>
                <Button Content="🏪 Открыть рынок" 
                        Command="{Binding OpenMarketCommand}"
                        Padding="20,12" Margin="5" FontSize="14"
                        Background="#27AE60" Foreground="White"
                        MinWidth="150" Height="40"/>
                <Button Content="Clear" 
                        Command="{Binding ClearCommand}"
                        Padding="20,12" Margin="5" FontSize="14"
                        Background="#6C757D" Foreground="White"
                        MinWidth="100" Height="40"/>
            </StackPanel>
        </Border>
        
        <!-- Progress Bar -->
        <ProgressBar Grid.Row="4" 
                     IsIndeterminate="{Binding IsLoading}"
                     Visibility="{Binding ProgressBarVisibility}"
                     Margin="0,0,0,15" Height="6"/>
        
        <!-- Chat Section -->
        <GroupBox Grid.Row="5" Header="💬 Отправка сообщений в чат" Margin="0,0,0,15" Foreground="#212529">
            <Grid Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox Grid.Column="0" 
                         Text="{Binding ChatMessage, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,10,0"
                         Padding="10,8"
                         FontSize="14"
                         VerticalContentAlignment="Center"
                         Background="White"
                         BorderBrush="#CED4DA"
                         BorderThickness="1"
                         KeyDown="TextBox_KeyDown"/>
                
                <Button Grid.Column="1" 
                        Content="📤 Отправить" 
                        Command="{Binding SendChatMessageCommand}"
                        Padding="20,8"
                        MinWidth="120"
                        Background="#28A745" 
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="Bold"/>
            </Grid>
        </GroupBox>

        <!-- Status Log -->
        <GroupBox Grid.Row="6" Header="Status Log" Margin="0,0,0,0">
            <Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ListBox ItemsSource="{Binding LogMessages}" 
                             Background="#1E1E1E" Foreground="#00FF00"
                             FontFamily="Consolas" FontSize="12"
                             BorderThickness="0" IsHitTestVisible="False"
                             Padding="10"/>
                </ScrollViewer>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
