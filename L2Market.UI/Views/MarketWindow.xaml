<Window x:Class="L2Market.UI.Views.MarketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Рынок L2Market" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <!-- Конвертеры -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Упрощенные стили -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
        </Style>
        
        <!-- Стиль для строк DataGrid с цветовым кодированием -->
        <Style x:Key="MarketItemRowStyle" TargetType="DataGridRow">
            <Style.Triggers>
                <!-- Частные магазины - продажа -->
                <DataTrigger Binding="{Binding MarketType}" Value="Частный магазин (Продажа)">
                    <Setter Property="Background" Value="#E8F5E8"/>
                    <Setter Property="BorderBrush" Value="#27AE60"/>
                </DataTrigger>
                <!-- Частные магазины - покупка -->
                <DataTrigger Binding="{Binding MarketType}" Value="Частный магазин (Покупка)">
                    <Setter Property="Background" Value="#FFEBEE"/>
                    <Setter Property="BorderBrush" Value="#E74C3C"/>
                </DataTrigger>
                <!-- Частные магазины - пакетная продажа -->
                <DataTrigger Binding="{Binding MarketType}" Value="Частный магазин (Пакетная продажа)">
                    <Setter Property="Background" Value="#FFF8E1"/>
                    <Setter Property="BorderBrush" Value="#F39C12"/>
                </DataTrigger>
                <!-- Комиссия -->
                <DataTrigger Binding="{Binding MarketType}" Value="Комиссия">
                    <Setter Property="Background" Value="#FFF3E0"/>
                    <Setter Property="BorderBrush" Value="#E67E22"/>
                </DataTrigger>
                <!-- Мировой обмен -->
                <DataTrigger Binding="{Binding MarketType}" Value="Мировой обмен">
                    <Setter Property="Background" Value="#F3E5F5"/>
                    <Setter Property="BorderBrush" Value="#9B59B6"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20,15">
            <Grid>
                <TextBlock Text="🏪 Рынок L2Market" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White"/>
            </Grid>
        </Border>

        <!-- Панель управления -->
        <Border Grid.Row="1" Background="White" Padding="20,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Верхняя строка: Фильтры и статистика -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Фильтры -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <ComboBox x:Name="ServerComboBox" 
                                 Width="120" 
                                 Margin="0,0,10,0"
                                 SelectedValue="{Binding SelectedServer}"
                                 SelectedValuePath="Tag">
                            <ComboBoxItem Content="Cadmus" Tag="Cadmus"/>
                            <ComboBoxItem Content="Airin" Tag="Airin"/>
                            <ComboBoxItem Content="Elcardia" Tag="Elcardia"/>
                            <ComboBoxItem Content="Hatos" Tag="Hatos"/>
                            <ComboBoxItem Content="LionelHunter" Tag="LionelHunter"/>
                            <ComboBoxItem Content="Faris" Tag="Faris"/>
                            <ComboBoxItem Content="Tarkai" Tag="Tarkai"/>
                            <ComboBoxItem Content="Gran Kain" Tag="Gran Kain"/>
                            <ComboBoxItem Content="Valakas" Tag="Valakas"/>
                            <ComboBoxItem Content="Antharas" Tag="Antharas"/>
                            <ComboBoxItem Content="Carneiar" Tag="Carneiar"/>
                            <ComboBoxItem Content="Peach" Tag="Peach"/>
                            <ComboBoxItem Content="Lilac" Tag="Lilac"/>
                            <ComboBoxItem Content="EVA1" Tag="EVA1"/>
                            <ComboBoxItem Content="EVA2" Tag="EVA2"/>
                            <ComboBoxItem Content="Amethyst" Tag="Amethyst"/>
                            <ComboBoxItem Content="Wolf" Tag="Wolf"/>
                            <ComboBoxItem Content="Wolf 2" Tag="Wolf 2"/>
                            <ComboBoxItem Content="Hindemith" Tag="Hindemith"/>
                            <ComboBoxItem Content="Shyeed" Tag="Shyeed"/>
                        </ComboBox>

                        <ComboBox x:Name="MarketTypeComboBox" 
                                 Width="120" 
                                 Margin="0,0,10,0"
                                 SelectedIndex="0">
                            <ComboBoxItem Content="Все рынки" Tag="All"/>
                            <ComboBoxItem Content="Частные" Tag="PrivateStore"/>
                            <ComboBoxItem Content="Комиссии" Tag="Commission"/>
                            <ComboBoxItem Content="Мировой" Tag="WorldExchange"/>
                        </ComboBox>

                        <TextBox x:Name="SearchTextBox" 
                                Width="200" 
                                Margin="0,0,10,0"
                                Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Статистика -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="📊 Предметов: " VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding TotalItems}" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Center" 
                                  Margin="0,0,15,0"/>
                        <TextBlock Text="📋 Правил: " VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding ActiveRules}" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Center" 
                                  Margin="0,0,15,0"/>
                        <TextBlock Text="🕒 Обновлено: " VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding LastUpdateTime}" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
                
                <!-- Нижняя строка: Кнопки и галочки отслеживания -->
                <Grid Grid.Row="1" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Галочки отслеживания -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <CheckBox Content="🏪 Частные" 
                                 IsChecked="{Binding IsPrivateStoreTrackingEnabled}"
                                 Margin="0,0,15,0"
                                 Foreground="#2C3E50"/>
                        <CheckBox Content="🏛️ Комиссии" 
                                 IsChecked="{Binding IsCommissionTrackingEnabled}"
                                 Margin="0,0,15,0"
                                 Foreground="#2C3E50"/>
                        <CheckBox Content="🌍 Мировой" 
                                 IsChecked="{Binding IsWorldExchangeTrackingEnabled}"
                                 Margin="0,0,15,0"
                                 Foreground="#2C3E50"/>
                    </StackPanel>

                    <!-- Кнопки -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="▶️ Запуск" 
                               Command="{Binding StartTrackingCommand}"
                               Background="#27AE60" 
                               Foreground="White"
                               Style="{StaticResource ButtonStyle}"
                               Margin="0,0,10,0"/>
                        <Button Content="🔄 Обновить" 
                               Command="{Binding RefreshCommand}"
                               Background="#3498DB" 
                               Foreground="White"
                               Style="{StaticResource ButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Основная область -->
        <Grid Grid.Row="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- DataGrid с предметами -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="📦 Предметы на рынке" 
                                  FontSize="18" 
                                  FontWeight="Bold"/>
                        <TextBlock Text=" (загрузка...)" 
                                  FontSize="14" 
                                  Foreground="Gray" 
                                  Margin="10,0,0,0"
                                  Visibility="{Binding IsRefreshing, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" 
                             ItemsSource="{Binding MarketItems}"
                             Style="{StaticResource DataGridStyle}"
                             RowStyle="{StaticResource MarketItemRowStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название" 
                                              Binding="{Binding ItemName}" 
                                              Width="120"/>
                            <DataGridTextColumn Header="Цена" 
                                              Binding="{Binding FormattedPrice}" 
                                              Width="80"/>
                            <DataGridTextColumn Header="Кол-во" 
                                              Binding="{Binding Count}" 
                                              Width="60"/>
                            <DataGridTextColumn Header="Продавец" 
                                              Binding="{Binding SellerName}" 
                                              Width="100"/>
                            <DataGridTextColumn Header="Тип" 
                                              Binding="{Binding MarketTypeIcon}" 
                                              Width="50"/>
                            <DataGridTextColumn Header="Тип предмета" 
                                              Binding="{Binding AdditionalInfo}" 
                                              Width="120"/>
                            <DataGridTextColumn Header="Зачар" 
                                              Binding="{Binding FormattedEnchantLevel}" 
                                              Width="50"/>
                            <DataGridTextColumn Header="Статус" 
                                              Binding="{Binding StatusIcons}" 
                                              Width="50"/>
                            <DataGridTextColumn Header="Координаты" 
                                              Binding="{Binding FormattedCoordinates}" 
                                              Width="100"/>
                            <DataGridTextColumn Header="Окончание" 
                                              Binding="{Binding FormattedEndTime}" 
                                              Width="100"/>
                            <DataGridTextColumn Header="Атака" 
                                              Binding="{Binding FormattedAttackAttribute}" 
                                              Width="100"/>
                            <DataGridTextColumn Header="Защита" 
                                              Binding="{Binding FormattedDefenceAttributes}" 
                                              Width="120"/>
                            <DataGridTextColumn Header="Душа" 
                                              Binding="{Binding FormattedSoulCrystalInfo}" 
                                              Width="120"/>
                            <DataGridTextColumn Header="Аугментация" 
                                              Binding="{Binding AugmentationInfo}" 
                                              Width="100"/>
                            <DataGridTextColumn Header="Стихии" 
                                              Binding="{Binding ElementalAttrs}" 
                                              Width="100"/>
                            <DataGridTextColumn Header="Эффекты" 
                                              Binding="{Binding EnchantEffects}" 
                                              Width="100"/>
                            <DataGridTextColumn Header="ID объекта" 
                                              Binding="{Binding ObjectId}" 
                                              Width="80"/>
                            <DataGridTextColumn Header="Время" 
                                              Binding="{Binding FormattedLastSeen}" 
                                              Width="60"/>
                            <DataGridTextColumn Header="До исчезновения" 
                                              Binding="{Binding TimeUntilExpiry}" 
                                              Width="100"/>
                            <DataGridTemplateColumn Header="Действия" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="💰 Купить" 
                                               Command="{Binding DataContext.BuyItemCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                               CommandParameter="{Binding}"
                                               Background="#E74C3C" 
                                               Foreground="White"
                                               Padding="4,2"
                                               FontSize="10"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Разделитель -->
            <GridSplitter Grid.Column="1" 
                         HorizontalAlignment="Stretch" 
                         Background="#E0E0E0"/>

            <!-- Панель правил -->
            <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                              Text="📋 Правила отслеживания" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              Margin="0,0,0,15"/>

                    <ListBox Grid.Row="1" 
                            ItemsSource="{Binding TrackingRules}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding ItemName}" Foreground="Gray"/>
                                    <TextBlock Text="Макс. цена: {Binding FormattedMaxPrice}"/>
                                    <TextBlock Text="Найдено: {Binding MatchesFound}" Foreground="Green"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button Grid.Row="2" 
                           Content="➕ Добавить правило" 
                           Command="{Binding AddRuleCommand}"
                           Background="#27AE60" 
                           Foreground="White"
                           Style="{StaticResource ButtonStyle}"
                           Margin="0,10,0,0"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Статус бар -->
        <Border Grid.Row="3" Background="#34495E" Padding="15,8">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="● " Foreground="Green" VerticalAlignment="Center"/>
                <TextBlock Text="Отслеживание активно" 
                          Foreground="White" 
                          VerticalAlignment="Center" 
                          Margin="0,0,20,0"/>
                <TextBlock Text="🔄 " VerticalAlignment="Center"/>
                <TextBlock Text="{Binding TotalItems, StringFormat='Предметов: {0}'}" 
                          Foreground="White" 
                          VerticalAlignment="Center" 
                          Margin="0,0,20,0"/>
                <TextBlock Text="📋 " VerticalAlignment="Center"/>
                <TextBlock Text="{Binding ActiveRules, StringFormat='Правил: {0}'}" 
                          Foreground="White" 
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
