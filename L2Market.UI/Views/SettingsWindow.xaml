<Window x:Class="L2Market.UI.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="650" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="500" MinWidth="700">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TabControl Grid.Row="0" Margin="0,0,0,15">
            <!-- NamedPipe Settings Tab -->
            <TabItem Header="NamedPipe Settings" Padding="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Connection Settings -->
                        <GroupBox Grid.Row="0" Header="Connection Settings" Margin="0,0,0,20" Foreground="#212529">
                            <Grid Margin="15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Label Grid.Row="0" Grid.Column="0" Content="Connection Timeout:" VerticalAlignment="Center" Margin="0,0,10,10" Foreground="#212529"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding ConnectionTimeoutSeconds, StringFormat={}{0:F0}}" Margin="0,0,0,10" Height="25" Foreground="#212529" Background="White"/>
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="sec" VerticalAlignment="Center" Margin="5,0,0,10" Foreground="#212529"/>
                                
                                <Label Grid.Row="1" Grid.Column="0" Content="Retry Delay:" VerticalAlignment="Center" Margin="0,0,10,10" Foreground="#212529"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding RetryDelaySeconds, StringFormat={}{0:F0}}" Margin="0,0,0,10" Height="25" Foreground="#212529" Background="White"/>
                                <TextBlock Grid.Row="1" Grid.Column="2" Text="sec" VerticalAlignment="Center" Margin="5,0,0,10" Foreground="#212529"/>
                                
                                <Label Grid.Row="2" Grid.Column="0" Content="Max Retries:" VerticalAlignment="Center" Margin="0,0,10,10" Foreground="#212529"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Settings.NamedPipe.MaxRetries}" Margin="0,0,0,10" Height="25" Foreground="#212529" Background="White"/>
                                
                                <Label Grid.Row="3" Grid.Column="0" Content="Read Timeout:" VerticalAlignment="Center" Margin="0,0,10,10" Foreground="#212529"/>
                                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding ReadTimeoutSeconds, StringFormat={}{0:F0}}" Margin="0,0,0,10" Height="25" Foreground="#212529" Background="White"/>
                                <TextBlock Grid.Row="3" Grid.Column="2" Text="sec" VerticalAlignment="Center" Margin="5,0,0,10" Foreground="#212529"/>
                                
                                <Label Grid.Row="4" Grid.Column="0" Content="Server Shutdown Timeout:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#212529"/>
                                <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding ServerShutdownTimeoutSeconds, StringFormat={}{0:F0}}" Margin="0,0,0,0" Height="25" Foreground="#212529" Background="White"/>
                                <TextBlock Grid.Row="4" Grid.Column="2" Text="sec" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="#212529"/>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            
            <!-- Injection Settings Tab -->
            <TabItem Header="Injection Settings" Padding="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Workflow Settings -->
                        <GroupBox Grid.Row="0" Header="Workflow Settings" Margin="0,0,0,20" Foreground="#212529">
                            <Grid Margin="15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Label Grid.Row="0" Grid.Column="0" Content="Workflow Timeout:" VerticalAlignment="Center" Margin="0,0,10,10" Foreground="#212529"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding WorkflowTimeoutSeconds, StringFormat={}{0:F0}}" Margin="0,0,0,10" Height="25" Foreground="#212529" Background="White"/>
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="sec" VerticalAlignment="Center" Margin="5,0,0,10" Foreground="#212529"/>
                                
                                <Label Grid.Row="1" Grid.Column="0" Content="Process Search Timeout:" VerticalAlignment="Center" Margin="0,0,10,10" Foreground="#212529"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding ProcessSearchTimeoutSeconds, StringFormat={}{0:F0}}" Margin="0,0,0,10" Height="25" Foreground="#212529" Background="White"/>
                                <TextBlock Grid.Row="1" Grid.Column="2" Text="sec" VerticalAlignment="Center" Margin="5,0,0,10" Foreground="#212529"/>
                                
                                <Label Grid.Row="2" Grid.Column="0" Content="Default Process Name:" VerticalAlignment="Center" Margin="0,0,10,10" Foreground="#212529"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Settings.Injection.DefaultProcessName}" Margin="0,0,0,10" Height="25" Foreground="#212529" Background="White"/>
                                
                                <Label Grid.Row="3" Grid.Column="0" Content="Default DLL Path:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#212529"/>
                                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Settings.Injection.DefaultDllPath}" Margin="0,0,0,0" Height="25" Foreground="#212529" Background="White"/>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            
            <!-- UI Settings Tab -->
            <TabItem Header="UI Settings" Padding="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Display Settings -->
                        <GroupBox Grid.Row="0" Header="Display Settings" Margin="0,0,0,20" Foreground="#212529">
                            <Grid Margin="15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <CheckBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Content="Auto Scroll" IsChecked="{Binding Settings.UI.AutoScroll}" Margin="0,0,0,15" VerticalAlignment="Center" Foreground="#212529"/>
                                
                                <Label Grid.Row="1" Grid.Column="0" Content="Max Log Lines:" VerticalAlignment="Center" Margin="0,0,10,15" Foreground="#212529"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Settings.UI.MaxLogLines}" Margin="0,0,0,15" Height="25" Foreground="#212529" Background="White"/>
                                
                                <CheckBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Content="Show Timestamps" IsChecked="{Binding Settings.UI.ShowTimestamps}" Margin="0,0,0,15" VerticalAlignment="Center" Foreground="#212529"/>
                                
                                <Label Grid.Row="3" Grid.Column="0" Content="Theme:" VerticalAlignment="Center" Margin="0,0,10,15" Foreground="#212529"/>
                                <ComboBox Grid.Row="3" Grid.Column="1" SelectedItem="{Binding Settings.UI.Theme}" Margin="0,0,0,15" Height="25" Foreground="#212529" Background="White">
                                    <ComboBoxItem Content="Light" Foreground="#212529"/>
                                    <ComboBoxItem Content="Dark" Foreground="#212529"/>
                                </ComboBox>
                                
                                <CheckBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Content="Minimize to Tray" IsChecked="{Binding Settings.UI.MinimizeToTray}" Margin="0,0,0,0" VerticalAlignment="Center" Foreground="#212529"/>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        
        <!-- Buttons -->
        <Border Grid.Row="1" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="15,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Reset to Defaults" Command="{Binding ResetCommand}" Margin="0,0,10,0" Padding="15,8" MinWidth="120"/>
                <Button Content="Cancel" Command="{Binding CancelCommand}" Margin="0,0,10,0" Padding="15,8" MinWidth="80"/>
                <Button Content="Save" Command="{Binding SaveCommand}" IsDefault="True" Padding="15,8" MinWidth="80" Background="#0078D4" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
